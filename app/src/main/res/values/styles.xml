<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/icon_back</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>
    </style>

    <style name="titlestyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!--MainActivity RadioButton的样式-->
    <style name="style_RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <!--首页固定项目的线下布局的style 1 -->
    <style name="home_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_mine_ll</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--首页固定项目的文字 1.1 -->
    <style name="style_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--首页固定项目的图片  1.2-->
    <style name="home_imageView">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <!--个人中心-->
    <style name="mine_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_mine_ll</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="image_clickable_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/clickable_right</item>
    </style>


</resources>
